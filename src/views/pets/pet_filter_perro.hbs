<div class="row container">
  <div class="col l3">
    <aside class="">
    <div class="card div-card-aside z-depth-0">
    <!--<form method="POST" action="/pets-filter/filters-perro" id="form_filter">-->
    <div class="div-checkbox">
        <h5>Edad</h5>
        {{#each edadF}}
          <p>
            <label>
              <input type="checkbox" class="filled-in checkbox-indigo edad" name="edad[]"  value="{{this}}"/>
              <span>{{this}}</span>
            </label>
          </p>
        {{/each}}

      </div>
      <div class="div-checkbox">
        <h5>Raza</h5>
        {{#each razaF}}
        <p>
          <label>
            <input type="checkbox" value="{{this}}"  class="filled-in checkbox-indigo raza" name="raza[]" />
            <span>{{this}}</span>
          </label>
        </p>
        {{/each}}
      </div>
      <div class="div-checkbox">
        <h5>Color</h5>
        {{#each colorF}}
        <p>
          <label>
            <input type="checkbox" value="{{this}}"  class="filled-in checkbox-indigo color"  name="color[]"/>
            <span>{{this}}</span>
          </label>
        </p>
        {{/each}}
      </div>
      <div class="center">
        <input type="hidden" id="in-edad" value="" name="inEdad">
        <input type="hidden" id="in-raza" value="" name="inRaza">
        <input type="hidden" id="in-color" value="" name="inColor">
        <input type="hidden" id="in-tipo-pet-filter" value="perro">

      </div>
    <!--</form>-->
    </div>
    </aside>
  </div>
  <div class="col l9 row">
    <div class="row" id="div-cards-pets-filter">
      {{#if pets}}
      {{#each pets}}
        <div class="col l4 s12 m6">
          <div class="tarjeta-index-pet card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator card-image" src="/images/pets/{{imagen0}}">
            </div>
            <div class="contenido-tarjeta card-content">
              <div class="titulo titulo-filter overflow"><span>{{nombre}}</span></div>
            </div>
            <div class="div-button center">
              <a href="/detail-pet/{{_id}}"  name="button" class="btn button-revel-filter">Conocerlo</a>
            </div>

          </div>
        </div>
      {{/each}}
      {{else}}
        <div class="div-not-pets-filter-found">
          <h3>No se encontraron resultados</h3>
        </div>
      {{/if}}
    </div>


