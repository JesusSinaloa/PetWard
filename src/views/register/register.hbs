<section class="container">
  <div class="row div-body-register" id="card-register">
    <div class="col l12">
      <br><br><br>
          <div class="card z-depth-1">
            <div class="card-content-register">

              <div class="col l12 div-container-form-register">

                <form class="subdiv-form-container-register row" method="POST" action="/Register/add-user">
                  <div class="col l6">
                    <div class="">
                      <span>Nombre</span>
                      <input type="text" name="nombre" value="{{nombre}}" class="input-text validate">
                    </div>
                    <div class="">
                      <span>Apellidos</span>
                      <input type="text" name="apellidos" value="{{apellidos}}" class="input-text validate">
                    </div>
