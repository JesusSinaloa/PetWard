<div class="container div-table-messages">
  <div class="card card-message-user">
    <div class="card-message-title">
      <h5>Bandeja de entrada</h5>
      <label>Responde lo antes posible</label>
    </div>
    <div class="card-content row">
  <table class="centered highlight table-messages">
    <thead class="head-table">
      <tr>
          <th></th>
          <th>User</th>
          <th>Pet</th>
          <th>Date</th>
          <th>Asunto</th>
          <th>Action</th>

      </tr>
    </thead>

    <tbody class="body-table">


      {{#each mesages}}
      <tr>
        <td><i class="far fa-envelope-open"></i></td>
        <td>{{send_by.[0].nameUser}}</td>
        <td>{{pet.[0].namePet}}</td>
        <td>{{dateCreated}}</td>
        <td>{{asunto}}</td>
        <td><a href="/delete-message/{{_id}}"><i class="far fa-trash-alt"></i></a></td>
        <td><a href="/detail-message/{{_id}}"><i class="fas fa-eye"></i></a></td>
      </tr>
      {{/each}}

    </tbody>
  </table>
</div>
</div>
</div>
